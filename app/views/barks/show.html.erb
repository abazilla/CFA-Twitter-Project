<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col s6 offset-s3 left-align card-panel hoverable">
      <p>
        <strong>Description:</strong>
        <%= @bark.description %>
      </p>

      <p>
        <strong>Doggo:</strong>
        <%= @bark.doggo.email %>
      </p>

      <%= link_to 'Edit', edit_bark_path(@bark) %> |
      <%= link_to @like_status, toggle_like_bark_path %> |
      <%= link_to @follow_status, toggle_follow_bark_path %> |
      <%= link_to 'Back', barks_path %>

      <%= render 'comments/form', comment: @comment %>

      <!-- #shows all email and comments of user -->
      <h6>Comments</h6>
      <% @all_comments.each do |comment| %>
      <p><%= link_to comment.doggo.email, '#' %></p>
      <p><%= comment.description %></p>
      <br />
      <% end %>

    </div>
  </div>
</div>
